                        <ProgressBar
                            android:id="@+id/loadbar"
                            android:layout_width="35dip"
                            android:layout_height="35dip"
                            android:layout_centerInParent="true"
                            android:indeterminateDrawable="@drawable/bar_anim"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
