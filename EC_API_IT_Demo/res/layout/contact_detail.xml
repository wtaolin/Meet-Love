            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/set_account_layout"
                    android:layout_width="match_parent"
                    android:layout_height="53.3dp"
                    android:background="@drawable/bg_item_selector"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="33.3dp"
                        android:duplicateParentState="true"
                        android:gravity="right|center"
                        android:text="帐号"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/personal_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@+id/set_location_btn"
                        android:layout_toRightOf="@+id/personal_name"
                        android:duplicateParentState="true"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/set_location_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:duplicateParentState="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/set_department_layout"
                    android:layout_width="match_parent"
                    android:layout_height="53.3dp"
                    android:background="@drawable/bg_item_selector"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/personal_depart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="33.3dp"
                        android:duplicateParentState="true"
                        android:gravity="right|center"
