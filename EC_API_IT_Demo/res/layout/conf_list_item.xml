<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conf_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:paddingRight="14dp" >

    <ImageView
        android:id="@+id/conf_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6.67dp"
        android:src="@drawable/conf_to_attend_tag" />

    <TextView
        android:id="@+id/conf_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/meeting_back"
        android:layout_toRightOf="@+id/conf_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conf_name"
        android:layout_below="@id/conf_name"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/meeting_back" >

        <TextView
            android:id="@+id/conf_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.3dip"
            android:text="@string/conference_time"
            android:textColor="#cccccc"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/conf_emcee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#cccccc"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/meeting_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6.67dp"
        android:src="@drawable/icon_meeting_back" />

</RelativeLayout>