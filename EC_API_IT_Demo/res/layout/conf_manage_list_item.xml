<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_contact_normal_head" />

    <!-- <ImageView
        android:id="@+id/status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/head"
        android:src="@drawable/recent_offline_small" /> -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head"
        android:paddingTop="5dp"
        android:text="lhx02" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/head"
        android:paddingBottom="5dp"
        android:text="145019" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/speaker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/conf_speak"
            android:scaleType="fitXY" 
            android:visibility="gone" />

        <ImageView
            android:id="@+id/media"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/conference_data_smail"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/stauts"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="13.34dp"
            android:background="@drawable/conf_calling_3" />
        
    </LinearLayout>

</RelativeLayout>