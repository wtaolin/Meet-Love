<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <SurfaceView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <VideoView
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:id="@+id/image"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/emotion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/emotion"
        android:layout_toRightOf="@+id/emotion"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="top">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:background="@drawable/seekbar" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:id="@+id/seekBar"
            android:progress="0"
            android:progressDrawable="@null"
            android:thumb="@drawable/thumb"
            android:thumbOffset="0dp"
            android:indeterminate="false"
            android:max="10000"
            android:paddingTop="1px"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/emotion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/emotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/warn_empty"
            android:scaleType="fitCenter" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/emotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/warn_empty"
            android:scaleType="fitCenter" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/emotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/warn_empty"
            android:scaleType="fitCenter" />
        \
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/emotion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout1"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:id="@+id/img1"
            android:layout_alignBottom="@+id/emotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/warn"
            android:scaleType="fitCenter"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:id="@+id/img2"
            android:layout_alignBottom="@+id/emotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/warn"
            android:scaleType="fitCenter"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:id="@+id/img3"
            android:layout_alignBottom="@+id/emotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:src="@drawable/warn"
            android:scaleType="fitCenter"
            android:visibility="invisible" />
        \
    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/interact"
        android:layout_above="@+id/emotion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/interact"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/hangoff"
        android:layout_alignBottom="@+id/interact"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hangoff"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp" />

</RelativeLayout>