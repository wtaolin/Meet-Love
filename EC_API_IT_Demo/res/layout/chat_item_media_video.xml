<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
        >

    <com.huawei.esdk.uc.widget.CustomImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/umPicWidth"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:minHeight="86.67dp"
            android:maxHeight="173.33dp"
            android:src="@drawable/um_video_normal"
            android:adjustViewBounds="true"
            android:background="@color/video_bg"
            />

    <com.huawei.esdk.uc.widget.CircleProgressBar
            android:id="@+id/item_video_pb"
            android:layout_width="53.33dp"
            android:layout_height="53.33dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />

    <TextView
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="53.33dp"
            android:minHeight="53.33dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/icon_video_small_play_normal"
            />

</merge>
