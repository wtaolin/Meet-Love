<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:id="@+id/remote_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_main" />

    <FrameLayout
        android:id="@+id/local_video"
        android:layout_width="101.33dp"
        android:layout_height="134.67dp"
        
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/local_video_landscape"
        android:layout_width="134.67dp"
        android:layout_height="101.33dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:visibility="invisible"  />

    <FrameLayout
        android:id="@+id/call_func_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/call_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#44000000" >

            <include layout="@layout/call_info_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <include layout="@layout/call_bar_layout" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>